{
  "name": "@jsxt/stream",
  "version": "4.5.0",
  "description": "Stream is a library for creating a async iterable pull stream from a push source",
  "license": "MIT",
  "author": "James \"The Jamesernator\" Browning",
  "type": "module",
  "main": "./dist/Stream.js",
  "exports": {
    ".": "./dist/Stream.js",
    "./": "./dist/"
  },
  "files": [
    "dist/*",
    "src/*",
    "README.md",
    "stream.svg",
    "tsconfig.base.json",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "rm -rf ./dist/; tsc --project ./tsconfig.build.json",
    "lint": "eslint src/*.ts",
    "lint:fix": "eslint --fix src/*.ts",
    "prepublishOnly": "rm -rf ./dist/ && npm run build",
    "test": "npm run build; ava"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "tests/**/*.test.ts"
    ],
    "nodeArguments": [
      "--enable-source-maps",
      "--no-warnings",
      "--loader=./typescript-loader.js",
      "--experimental-specifier-resolution=node"
    ],
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    }
  },
  "devDependencies": {
    "@jsxt/eslint-config": "^6.3.0",
    "@types/glob": "^7.1.1",
    "@types/node": "^12.12.68",
    "ava": "^3.13.0",
    "glob": "^7.1.5",
    "typescript": "^4.3.0-beta"
  }
}
